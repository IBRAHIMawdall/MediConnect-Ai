# Production Environment Configuration
NODE_ENV=production
ENVIRONMENT=production

# Database Configuration
DATABASE_URL=sqlite:///./medical.db

# External API Configuration
OPENFDA_API_KEY=your_openfda_api_key_here

# Security Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
API_KEY_HEADER=X-API-Key
ALLOWED_API_KEYS=api-key-1,api-key-2,api-key-3
ENABLE_SECURITY_HEADERS=true

# Rate Limiting
RATE_LIMIT_QPS=10
RATE_LIMIT_BURST=20
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
HTTP_RETRY_MAX=3
HTTP_RETRY_BASE_SECONDS=1.0
HTTP_TIMEOUT=30

# Scheduler Configuration
SCHEDULE_OPENFDA_NDC_CRON=0 2 * * *
SCHEDULE_OPENFDA_LABEL_CRON=30 2 * * *
ENABLE_SCHEDULER=0

# CORS Configuration
CORS_ORIGINS=https://your-domain.com,https://your-firebase-app.web.app
TRUSTED_HOSTS=your-domain.com,your-firebase-app.web.app,localhost

# Server Configuration
PORT=8000
HOST=0.0.0.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Scheduler Settings
SCHEDULER_TIMEZONE=UTC

# Firebase Configuration (for frontend deployment)
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Security Headers
SECURE_HEADERS=true
CONTENT_SECURITY_POLICY=default-src 'self'
X_FRAME_OPTIONS=DENY
X_XSS_PROTECTION=1; mode=block
STRICT_TRANSPORT_SECURITY=max-age=31536000