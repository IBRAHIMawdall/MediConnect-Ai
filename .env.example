# Firebase Configuration
# Get these values from your Firebase project settings
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=
VITE_FIREBASE_MEASUREMENT_ID=

# Environment
VITE_NODE_ENV=development
VITE_USE_FIREBASE_EMULATORS=true

# Firebase Emulator Ports
VITE_FIREBASE_AUTH_EMULATOR_PORT=9099
VITE_FIREBASE_FIRESTORE_EMULATOR_PORT=8080
VITE_FIREBASE_FUNCTIONS_EMULATOR_PORT=5001
VITE_FIREBASE_STORAGE_EMULATOR_PORT=9199

# API Configuration
VITE_API_BASE_URL=http://localhost:5001/your_project_id/us-central1
VITE_API_TIMEOUT=10000

# Security Configuration
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_CRASHLYTICS=true
VITE_ENABLE_SECURITY_HEADERS=true
VITE_ENABLE_CSP=true

# Feature Flags
VITE_ENABLE_SOCIAL_AUTH=true
VITE_ENABLE_EMAIL_VERIFICATION=true
VITE_ENABLE_OFFLINE_MODE=true

# Rate Limiting
VITE_RATE_LIMIT_REQUESTS_PER_MINUTE=60
VITE_RATE_LIMIT_BURST_SIZE=10

# Authentication Configuration
VITE_AUTH_TOKEN_EXPIRY=3600
VITE_AUTH_REFRESH_TOKEN_EXPIRY=604800
VITE_AUTH_PASSWORD_MIN_LENGTH=8
VITE_AUTH_MAX_LOGIN_ATTEMPTS=5
VITE_AUTH_LOCKOUT_DURATION=900000

# Social Authentication
VITE_GOOGLE_CLIENT_ID=
VITE_FACEBOOK_APP_ID=
VITE_TWITTER_API_KEY=
VITE_GITHUB_CLIENT_ID=

# Third-party Services
VITE_GOOGLE_ANALYTICS_ID=
VITE_SENTRY_DSN=
VITE_VAPID_PUBLIC_KEY=

# Email Configuration
VITE_EMAIL_VERIFICATION_URL=http://localhost:5173/verify-email
VITE_PASSWORD_RESET_URL=http://localhost:5173/reset-password

# Security Headers
VITE_ENABLE_HSTS=true
VITE_ENABLE_X_FRAME_OPTIONS=true
VITE_ENABLE_X_CONTENT_TYPE_OPTIONS=true
VITE_ENABLE_REFERRER_POLICY=true

# Development Configuration
VITE_HOT_RELOAD=true
VITE_SOURCE_MAPS=true
VITE_MINIFY=false