{
  "name": "medical-information-app",
  "version": "1.0.0",
  "description": "Comprehensive medical information and drug database application",
  "private": true,
  "scripts": {
    "start": "vite",
    "dev": "vite",
    "dev:https": "npm run ssl:generate && vite",
    "build": "vite build",
    "preview": "vite preview",
    "preview:https": "npm run ssl:generate && vite preview",
    "build:prod": "npm run cleanup:prod && npm run optimize:assets && npm run build && npm run optimize",
    "optimize": "npm run compress && npm run generate-sw",
    "compress": "gzip -k -9 dist/**/*.{js,css,html,json} || true",
    "generate-sw": "node scripts/generate-sw.js",
    "ssl:generate": "node scripts/generate-ssl-certs.js",
    "ssl:clean": "rimraf certs",
    "cleanup:prod": "node scripts/cleanup-production.js",
    "cleanup:dry-run": "node scripts/cleanup-production.js --dry-run",
    "cleanup:no-backup": "node scripts/cleanup-production.js --no-backup",
    "deploy": "firebase deploy",
    "deploy:prod": "npm run build:prod && npm run deploy",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "security:audit": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "security:scan": "npm run security:audit && npm run lint",
    "test:security": "node scripts/security-test.js",
    "optimize:assets": "node scripts/optimize-assets.js",
    "optimize:assets:dry-run": "node scripts/optimize-assets.js --dry-run",
    "optimize:assets:verbose": "node scripts/optimize-assets.js --verbose",
    "cache:clear": "node scripts/clear-cache.js",
    "cache:stats": "node scripts/cache-stats.js",
    "cache:preload": "node scripts/preload-cache.js",
    "sw:update": "node scripts/update-service-worker.js",
    "sw:validate": "node scripts/validate-service-worker.js",
    "db:optimize": "node scripts/optimize-database.js",
    "db:optimize:dry-run": "node scripts/optimize-database.js --dry-run",
    "db:optimize:verbose": "node scripts/optimize-database.js --verbose",
    "db:analyze": "node scripts/optimize-database.js --skip-indexes",
    "db:indexes": "node scripts/optimize-database.js --skip-analysis",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "docker:build": "docker build -f Dockerfile.frontend -t medical-app-frontend .",
    "docker:run": "docker run -p 80:80 medical-app-frontend",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f",
    "lighthouse:ci": "lhci autorun",
    "lighthouse:local": "lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "firebase:init": "firebase init",
    "firebase:login": "firebase login",
    "firebase:deploy": "firebase deploy",
    "firebase:deploy:hosting": "firebase deploy --only hosting",
    "firebase:deploy:functions": "firebase deploy --only functions",
    "firebase:deploy:firestore": "firebase deploy --only firestore",
    "firebase:serve": "firebase serve",
    "firebase:emulators": "firebase emulators:start",
    "firebase:emulators:ui": "firebase emulators:start --import=./firebase-export --export-on-exit",
    "firebase:export": "firebase emulators:export ./firebase-export",
    "firebase:import": "firebase emulators:start --import=./firebase-export"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.0",
    "@heroicons/react": "^2.0.0",
    "@tailwindcss/postcss": "^4.1.12",
    "axios": "^1.3.0",
    "clsx": "^1.2.0",
    "date-fns": "^2.29.0",
    "firebase": "^10.7.0",
    "lucide-react": "^0.263.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.0",
    "@babel/preset-react": "^7.22.0",
    "@babel/preset-typescript": "^7.22.0",
    "@lhci/cli": "^0.12.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vitejs/plugin-react": "^3.1.0",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^29.5.0",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.32.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "firebase-tools": "^11.0.0",
    "glob": "^10.3.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-junit": "^16.0.0",
    "jest-transform-css": "^6.0.1",
    "jest-transform-file": "^1.1.1",
    "jest-watch-typeahead": "^2.2.2",
    "lighthouse": "^10.4.0",
    "postcss": "^8.5.6",
    "rimraf": "^5.0.0",
    "tailwindcss": "^4.1.12",
    "terser": "^5.19.0",
    "typescript": "^4.9.0",
    "vite": "^4.5.14"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
